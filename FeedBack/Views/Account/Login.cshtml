@*<h3 class="loginttl">FEEDBACK LOGIN</h3>*@
<h3 class="loginttl">FeedBack Login</h3>
<form class="form-login" asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>
    <fieldset>
        <legend>
            Sign in to your account
        </legend>
        <p>
            Please enter your name and password to log in.
        </p>
        <div class="form-group">
            <span class="input-icon">
                <input type="text" class="form-control" asp-for="Email" placeholder="Username">
                <i class="fa fa-user"></i>
            </span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group form-actions">
            <span class="input-icon">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <i class="fa fa-lock"></i>
                <a class="forgot" href="login_forgot.html">
                    I forgot my password
                </a>
            </span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <div class="checkbox clip-check check-primary">
                <input type="checkbox" asp-for="RememberMe">
                <label asp-for="RememberMe">
                    Keep me signed in
                </label>
            </div>
            <button type="submit" class="btn btn-primary pull-right">
                Login <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>  
        <div class="new-account">
            <!-- start: COPYRIGHT -->
            <div class="copyright">
                &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> Feedback Solution</span>. <span>All rights reserved</span>
            </div>
            <!-- end: COPYRIGHT -->
        </div>
    </fieldset>
</form>

